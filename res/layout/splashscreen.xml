<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="@color/theme_light_grey">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/theme_very_dark_grey" >

        <ImageView
            android:id="@+id/bigLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/big_logo_begin3" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bigLogo"
            android:layout_centerHorizontal="true"
            android:text="Color Harmonizer v1.2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/theme_light_grey" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bigLogo"
            android:layout_centerHorizontal="true"
            android:text="Brandon Burton (C) 2012"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/theme_light_grey" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:text="bburton.cg@gmail.com"
            android:textColor="@color/theme_light_grey" />

    </RelativeLayout>

</LinearLayout>