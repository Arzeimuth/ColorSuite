<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
			<shape>
				<corners
					android:radius="6dp"    
				/>
				<padding
	                android:left="1dp"
	                android:right="1dp"
	            />
				<gradient
			    	android:startColor="#FF111111"
			    	android:endColor="#FFEEEEEE"
			    />
			    <stroke 
			        android:width="1dp"
			        android:color="#222"
			    />
			</shape>
    </item>
</layer-list>